{
  "name": "@rimtrans/app",
  "productName": "RimTrans",
  "description": "The gui application for RimTrans.",
  "version": "4.0.0-alpha.1",
  "private": true,
  "author": "duduluu <duduluu@outlook.com>",
  "main": "dist/main/main.js",
  "scripts": {
    "clean": "rimraf dist",
    "gen-files": "yarn ts scripts/gen-files",
    "serve:renderer": "vue-cli-service serve",
    "serve:main": "electron .",
    "serve:electron": "nodemon",
    "build:renderer": "vue-cli-service build",
    "build:main": "babel src/main -x .ts -d dist/main -s --pure",
    "build:electron": "electron-builder",
    "build": "yarn build:renderer && yarn build:main && yarn build:electron",
    "test": "jest --maxWorkers=1 --setupTestFrameworkScriptFile=../jest.setup.js",
    "ts": "ts-node -r tsconfig-paths/register -P ../tsconfig.scripts.json"
  },
  "build": {
    "asar": true,
    "files": [
      "dist",
      "src",
      "!dist/electron",
      ".env"
    ],
    "directories": {
      "output": "dist/electron"
    },
    "win": {
      "target": "NSIS",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "installerIcon": "build/installerIcon.ico",
      "uninstallerIcon": "build/uninstallerIcon.ico",
      "oneClick": false,
      "perMachine": true,
      "allowElevation": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "@babel/cli": "^7.4.4",
    "@mdi/js": "^3.8.95",
    "@rimtrans/io": "0.4.0",
    "axios": "^0.19.0",
    "cep.scss": "^1.1.1",
    "core-js": "^3.1.4",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "normalize.css": "^8.0.1",
    "vue": "^2.6.10",
    "vue-class-component": "^7.1.0",
    "vue-property-decorator": "^8.2.1",
    "vue-router": "^3.0.7"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.0",
    "@types/webpack": "^4.4.35",
    "@types/webpack-chain": "^5.2.0",
    "@vue/cli-plugin-babel": "^3.9.0",
    "@vue/cli-plugin-eslint": "^3.9.0",
    "@vue/cli-plugin-typescript": "^3.9.0",
    "@vue/cli-service": "^3.9.0",
    "@vue/eslint-config-typescript": "^4.0.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.2",
    "electron": "^5.0.6",
    "electron-builder": "^21.0.15",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "nodemon": "^1.19.1",
    "sass": "^1.22.4",
    "sass-loader": "^7.1.0",
    "typescript": "^3.5.3",
    "vue-template-compiler": "^2.6.10"
  }
}
