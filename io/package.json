{
  "name": "@rimtrans/io",
  "description": "The io distrary for RimTrans.",
  "version": "0.4.1",
  "private": true,
  "main": "dist/cjs/io.js",
  "module": "dist/esm/io.js",
  "sideEffects": false,
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build:cjs": "babel src -x .ts -d dist/cjs -s",
    "build:esm": "babel src -x .ts -d dist/esm -s --esm",
    "build:types": "tsc && ncp dist/types dist/cjs && ncp dist/types dist/esm && rimraf dist/types",
    "build": "yarn build:cjs && yarn build:esm && yarn build:types",
    "lint": "eslint src/ --ext .ts,.tsx --color",
    "test": "jest --maxWorkers=1 --setupTestFrameworkScriptFile=../jest.setup.js --color",
    "ts": "ts-node -r tsconfig-paths/register -P ../tsconfig.scripts.json"
  },
  "dependencies": {
    "@types/fs-extra": "^8.0.0",
    "@types/ncp": "^2.0.1",
    "@types/rimraf": "^2.0.2",
    "fs-extra": "^8.1.0",
    "globby": "^10.0.1",
    "ncp": "^2.0.0",
    "rimraf": "^2.6.3"
  }
}
