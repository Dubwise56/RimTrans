{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "scripthost", "esnext"],

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "preserve",
    "jsxFactory": "h",

    "strict": true,

    "baseUrl": ".",
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "moduleResolution": "node",

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "diagnostics": true,
    "listFiles": true,

    "newLine": "lf"
  },
  "include": [
    "scripts/**/*.ts",
    "typings/**/*.d.ts",
    "packages/@rimtrans/*/scripts/**/*.ts",
    "packages/@rimtrans/*/src/**/*.ts",
    "packages/@rimtrans/*/src/**/*.tsx",
    "packages/@rimtrans/*/src/**/*.json"
  ]
}
